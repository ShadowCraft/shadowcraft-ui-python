<!doctype html>
<html>

<head>
  {% if page_title is not defined %}
  <title>ShadowCraft - Rogue DPS Spreadsheet</title>
  {% else %}
  <title>{{ page_title }} - ShadowCraft</title>
  {% endif %}
  <% htmlWebpackPlugin.files.css.forEach(function(cssFile) { %>
  <link href="{{ url_for('static', filename='images/favicon.png') }}"
        rel="shortcut icon" type="image/png" />
  <link href="http://shadowcraft.mmo-mumble.com/humans.txt" rel="author"
        type="text/plain">

  <link href="{{ url_for('static', filename='<%= cssFile.split('/').slice(-2).join('/') %>') }}" media="screen" rel="stylesheet" type="text/css" />
  <% }); %>
  <!-- This one can't load async because it has to be loaded before the gear tab
       loads or we end up with an error that it's not ready yet -->
  <script src="//static-azeroth.cursecdn.com/current/js/syndication/tt.js"></script>
  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
</head>

<body>

  <noscript>
    <div class='characters-new' id='container'>
      <div id='create_character'>
        <div class='form'>
          <p class='requires-js'>Shadowcraft requires Javascript to run. Please turn it on and disable NoScript.</p>
          <p>Shadowcraft runs best with a modern browser with full HTML5 support.</p>
          <p class='browser-list'>For best results, use:</p>
          <div class='browsers'>
            <a href='http://www.google.com/chrome/intl/en/landing_chrome.html'>
              <img alt="Chrome" src="{{ url_for('static',
                                     filename='/images/browser/chrome.png') }}" />
              <span>Google Chrome</span>
              <em>Best</em>
            </a>
            <a href='http://www.apple.com/safari/'>
              <img alt="Safari" src="{{ url_for('static',
                                     filename='/images/browser/safari.png') }}" />
              <span>Apple Safari</span>
              <em>Best</em>
            </a>
            <a href='http://www.mozilla.com/en-US/firefox/RC/'>
              <img alt="Firefox" src="{{ url_for('static',
                                      filename='/images/browser/firefox.png') }}" />
              <span>Mozilla Firefox</span>
              <em>Good</em>
            </a>
            <a href='http://www.beautyoftheweb.com'>
              <img alt="IE" src="{{ url_for('static',
                                 filename='/images/browser/ie.png') }}" />
              <span>Internet Explorer</span>
              <em>Good</em>
            </a>
          </div>
        </div>
      </div>
    </div>
  </noscript>

  <!-- Attach React components -->
  <div id="appjs"></div>

  <% htmlWebpackPlugin.files.js.forEach(function(jsFile) { %>
  <script type="text/javascript" src="{{ url_for('static', filename='<%= jsFile.split('/').slice(-1) %>') }}"></script>
  <% }); %>

  <script>
    var _gaq = _gaq || []; _gaq.push(['_setAccount', 'UA-12517505-2']); _gaq.push(['_trackPageview']);
    window._gaq = _gaq;
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</body>

</html>
